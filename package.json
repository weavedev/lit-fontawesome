{
  "name": "@weavedev/lit-fontawesome",
  "version": "0.1.0",
  "description": "Description description description",
  "main": "dist/litFontawesome.js",
  "types": "dist/litFontawesome.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "ci:test": "npm-run-all -l build test:*",
    "clean": "del-cli dist",
    "docs": "typedoc && touch docs/.nojekyll",
    "prepare": "npm-run-all -l test build docs",
    "test": "npm-run-all build test:*",
    "test:jest": "NODE_ENV=test jest",
    "test:lint": "tslint -p tsconfig.json -c tslint.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/weavedev/lit-fontawesome.git"
  },
  "keywords": [
    "lit-html",
    "fontawesome",
    "lit-element",
    "LitElement"
  ],
  "author": {
    "name": "Paul Gerarts",
    "email": "dev@gerarts.nl"
  },
  "contributors": [
    {
      "name": "Paul Gerarts",
      "email": "dev@gerarts.nl"
    }
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/weavedev/lit-fontawesome/issues"
  },
  "homepage": "https://github.com/weavedev/lit-fontawesome#readme",
  "devDependencies": {
    "@babel/plugin-transform-runtime": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "@fortawesome/fontawesome-common-types": "^0.2.32",
    "@fortawesome/free-solid-svg-icons": "^5.15.1",
    "@types/jest": "^23.3.14",
    "@webcomponents/webcomponentsjs": "^2.2.10",
    "babel-core": "^6.26.3",
    "babel-jest": "^25.5.1",
    "del-cli": "^1.1.0",
    "jest": "^26.6.3",
    "lit-html": "^1.0.0",
    "npm-run-all": "^4.1.5",
    "regenerator-runtime": "^0.13.2",
    "ts-jest": "^26.4.4",
    "ts-node": "^8.7.0",
    "tslint": "^5.17.0",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-microsoft-contrib": "^6.2.0",
    "typedoc": "^0.15.0",
    "typescript": "^3.7.0"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.{ts,tsx,js,jsx}",
      "!**/node_modules/**",
      "!**/*.test.{ts,tsx,js,jsx}"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "roots": [
      "<rootDir>/lib"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "transform": {
      "^.+\\.tsx?$": "ts-jest",
      "^.+\\.(js|jsx)$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "/node_modules/(?!lit-html).+\\.js"
    ]
  }
}
